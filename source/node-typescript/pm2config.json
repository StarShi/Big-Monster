{
  "apps": [{
      "name": "node-typescript",
      "script": "./dist/app.js",   
      "cwd": "./",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }, 
      "env_test": {
        "NODE_ENV": "test"
      },      
      "watch": true,     
      "ignore_watch": [  
          "node_modules",
          "logs"
      ],
      "instances": 1,   
      "error_file": "logs/err.log", 
      "out_file": "logs/out.log",   
      "log_date_format": "YYYY-MM-DD HH:mm:ss" 
  }]
}
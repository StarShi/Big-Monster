{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**", "dist", ".cache", "logs"],
  "verbose": true,
  "execMap": {
    "": "node",
    "js": "node --harmony",
    "ts": "ts-node"
  },
  "events": {
    "start": "",
    "crash": "",
    "exit": "",
    "restart": ""
  },
  "ext": "js json ts tsx",
  "watch": ["./**"],
  "legacy-watch": false
}
